<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Mostra erros detalhados (somente em dev) -->
    <httpErrors errorMode="Detailed" />
    <asp scriptErrorSentToBrowser="true" />

    <!-- Permite rotas SPA do React -->
    <rewrite>
      <rules>
        <!-- Roteamento SPA -->
        <rule name="ReactRoutes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>

        <!-- Desativa cache apenas do index.html -->
        <rule name="NoCacheIndex" stopProcessing="true">
          <match url="index.html" />
          <action type="None" />
          <serverVariables>
            <set name="RESPONSE_Cache-Control" value="no-cache, no-store, must-revalidate" />
            <set name="RESPONSE_Pragma" value="no-cache" />
            <set name="RESPONSE_Expires" value="0" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>

    <!-- Ativa cache para arquivos estáticos -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge"
                   cacheControlMaxAge="365.00:00:00"
                   cacheControlCustom="public" />
    </staticContent>

    <!-- Cabeçalhos gerais -->
    <httpProtocol>
      <customHeaders>
        <!-- Necessário para PWA -->
        <add name="Service-Worker-Allowed" value="/" />
      </customHeaders>
    </httpProtocol>

  </system.webServer>
</configuration>
